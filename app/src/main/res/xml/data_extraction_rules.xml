<?xml version="1.0" encoding="utf-8"?><!--
   Sample data extraction rules file; uncomment and customize as necessary.
   See https://developer.android.com/about/versions/12/backup-restore#xml-changes
   for details.
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Include app settings (SharedPreferences) -->
        <include domain="sharedpref" path="."/>
        
        <!-- Include all files first, then exclude specific paths -->
        <include domain="file" path="."/>
        
        <!-- Exclude Realm database files -->
        <exclude domain="file" path="databases/"/>
        <exclude domain="file" path="realm/"/>
        
        <!-- Exclude cache files -->
        <exclude domain="file" path="cache/"/>
        
        <!-- Exclude crash logs -->
        <exclude domain="file" path="crash_logs/"/>
    </cloud-backup>
    <!--
    <device-transfer>
        <include .../>
        <exclude .../>
    </device-transfer>
    -->
</data-extraction-rules>